# Example environment variables
# Copy this file to .env.local and fill in your values

# MongoDB Configuration
# Database name: lunchapp
# Collection name: lunchapp
# Format: mongodb+srv://username:password@cluster.mongodb.net/databasename?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/lunchapp?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production

# Email Configuration (SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
NEXT_PUBLIC_APP_URL=http://localhost:3000
